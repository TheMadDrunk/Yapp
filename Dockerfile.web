FROM node:22-alpine

# Enable Corepack to use the correct Yarn version
RUN corepack enable && corepack prepare yarn@4.4.1 --activate

WORKDIR /app

# Copy package.json first to leverage Docker cache
COPY package.json yarn.lock* .yarnrc.yml* ./

# Install the missing date-fns dependency and other dependencies
# RUN yarn add date-fns && yarn install

# Copy the rest of the app
COPY apps/web .

# Install dependencies
RUN yarn install

# Create a default .env file if none exists
COPY apps/web/.env.example ./.env

RUN chmod +x docker-entrypoint.sh

# Add tini as init process
RUN apk add --no-cache tini

# Use tini with docker-entrypoint.sh script
ENTRYPOINT ["/sbin/tini", "--", "/app/docker-entrypoint.sh"]
CMD ["sh", "-c", "yarn build && yarn start"]

# Note: To connect to services on the host machine, use host.docker.internal instead of localhost
# Example: When running the container, use --env VITE_STRAPI_URL=http://host.docker.internal:1337